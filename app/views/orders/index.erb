<h1>Listing Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Claim Number</th>
      <th scope="col">Contact Name</th>
      <th scope="col" colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td scope="row"><%= order.claim_num %></td>
      <td scope="row"><%= order.contact_name %></td>
      <td scope="row"><a href="/orders/<%= order.id %>/edit">Edit</a></td>
      <td scope="row"><a href="/orders/<%= order.id %>">Show</a></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>